<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:freezesText="true"
    android:orientation="vertical"
    tools:ignore="NestedWeights" >

    <LinearLayout
        android:id="@+id/linearLayoutH1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:orientation="vertical"
        android:weightSum="1" >

        <EditText
            android:id="@+id/textField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="none"
            android:textColor="#000000"
            android:textSize="65sp"
            android:windowSoftInputMode="stateHidden" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutH2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight=".25"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/emptyButton"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight=".50"
            android:text=""
            android:textSize="30sp" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/delete"
            android:textSize="30sp" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/clear"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutH3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight=".25"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/button7"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/seven"
            android:textSize="65sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/eight"
            android:textSize="65sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/nine"
            android:textSize="65sp" />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/divide"
            android:textSize="65sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutH4"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight=".25"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/button4"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/four"
            android:textSize="65sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/five"
            android:textSize="65sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/six"
            android:textSize="65sp" />

        <Button
            android:id="@+id/timesButton"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/times"
            android:textSize="65sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutH5"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight=".25"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/button1"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/one"
            android:textSize="65sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/two"
            android:textSize="65sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/three"
            android:textSize="65sp" />

        <Button
            android:id="@+id/minusButton"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/minus"
            android:textSize="65sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutH6"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight=".25"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/button0"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/zero"
            android:textSize="65sp" />

        <Button
            android:id="@+id/decimalButton"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/decimal"
            android:textSize="65sp" />

        <Button
            android:id="@+id/equalsButton"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/equals"
            android:textSize="65sp" />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:text="@string/plus"
            android:textSize="65sp" />
    </LinearLayout>

</LinearLayout>